{
  "remote.SSH.connectTimeout": 300,
  "editor.fontFamily": "Monaco Nerd Font",
  "editor.fontSize": 13,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "workbench.colorTheme": "Gruvbox Dark Medium",
  "editor.lineNumbers": "relative",
  "terminal.integrated.fontFamily": "Monaco Nerd Font",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.tabs.enabled": false,
  ////
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  //////
  "search.followSymlinks": false,
  "typescript.tsserver.maxTsServerMemory": 8064,
  //
  // VIM
  //
  "editor.occurrencesHighlight": "off",
  "editor.bracketPairColorization.enabled": true,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.visualstar": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.searchHighlightColor": "#F1A526",
  "vim.searchHighlightTextColor": "#282828",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "h"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<leader>", "l"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["c"],
      "after": ["\"", "_", "c"]
    },
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["D"],
      "after": ["\"", "_", "D"]
    },
    {
      "before": ["d", "d"],
      "after": ["\"", "_", "d", "d"]
    },
    {
      "before": ["x"],
      "after": ["d"]
    },
    {
      "before": ["X"],
      "after": ["D"]
    },
    {
      "before": ["x", "x"],
      "after": ["d", "d"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["q", "f"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "j"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "k"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["workbench.action.togglePanel"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.toggleAuxiliaryBar"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "g", "b"],
      "commands": ["gitlens.toggleFileBlame"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": [":nohl"]
    },
    {
      "before": ["s"],
      "after": ["<leader>", "<leader>", "s"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["x"],
      "after": ["d"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    }
  ],
  ///
  /// Other
  ///
  "highlight-matching-tag.styles": {
    "opening": {
      "underline": false,
      "name": {
        "highlight": "#3e3e3e",
        "custom": {
          "color": "#F1A526"
        }
      }
    }
  },
  "workbench.editor.enablePreview": false
}
